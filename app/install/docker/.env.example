# 数据库配置
POSTGRES_DB=gira
POSTGRES_USER=gira_prod
POSTGRES_PASSWORD=change_this_password_in_production

# Redis配置
REDIS_PASSWORD=change_this_password_in_production

# JWT配置
JWT_SECRET=change_this_to_a_very_long_and_secure_random_string_in_production
JWT_EXPIRATION=86400000
JWT_REFRESH_EXPIRATION=604800000

# 应用配置
SPRING_PROFILES_ACTIVE=prod
TZ=Asia/Shanghai

# 日志配置
LOG_LEVEL=INFO
LOG_PATH=/app/logs

# 上传文件配置
UPLOAD_PATH=/app/uploads
MAX_FILE_SIZE=10MB
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# CORS配置
ALLOWED_ORIGINS=https://your-frontend-domain.com
ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS,PATCH

# 监控配置
MANAGEMENT_ENDPOINTS_WEB_EXPOSURE=health,info,metrics
MANAGEMENT_ENDPOINT_HEALTH_SHOW_DETAILS=when_authorized 